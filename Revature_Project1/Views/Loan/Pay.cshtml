@model Revature_Project1.Models.LoanAccount

@{
    ViewBag.Title = "Pay Loan";
}

<h2></h2>

@using (Html.BeginForm("Pay", "Loan", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pay Loan Installment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AccountID)
        @Html.HiddenFor(model => model.Debit)

        <div class="form-group col-md-3">
            <label>Account ID</label>
                @Html.EditorFor(model => model.AccountID, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Debit, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Debit, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })

        </div>

        <div class="form-group col-md-3">
            <label for="paymentvalue">Payment Amount</label>
            <input type="number" min="0" name="paymentvalue" id="paymentvalue" class="form-control" required><br>
        </div>



        <div class="form-group col-md-3">
                <button type="submit" value="PayLoan" class="btn btn-primary">Pay Loan</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Account List", "Index", "Home")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}