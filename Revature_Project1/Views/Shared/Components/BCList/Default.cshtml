@using System.Linq
@model IEnumerable<Revature_Project1.Models.BusinessCheckingAccount>

@{
    //ViewData["Title"] = "GetAllCustomers";
}
@if (Model.Any())
{
    <h4>Business Checking Accounts</h4>

    <table class="table table-striped">
        <thead>
            <tr>
                <th style="min-width:200px">
                    Account Number
                </th>
                <th style="min-width:200px">
                    Balance
                </th>
                <th style="min-width:200px">
                    Overdraft Balance
                </th>
                <th style="min-width:200px">Account Functions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountID)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Credit)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Debit)
                    </td>
                    <td>
                        @Html.ActionLink("Withdraw", "Withdraw", "BusinessChecking", new { id = item.AccountID }, null) |
                        @Html.ActionLink("Deposit", "Deposit", "BusinessChecking", new { id = item.AccountID }, null) |
                        @Html.ActionLink("Transfer", "TransferFrom", "BusinessChecking", new { id = item.AccountID }, null) |
                        @Html.ActionLink("Transactions", "Transactions", "BusinessChecking", new { id = item.AccountID }, null) |
                        @Html.ActionLink("Close", "Delete", "BusinessChecking", new { id = item.AccountID }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
